<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="@dimen/main_pager_indicator_framelayout_width"
        android:layout_height="@dimen/main_pager_indicator_framelayout_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/main_pager_indicator_framelayout_marginTop" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/main_pager_indicator_imageview_icon"
            android:layout_height="@dimen/main_pager_indicator_imageview_icon"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/main_pager_indicator_color"
        android:textSize="@dimen/main_pager_indicator_label_textSize" />

</LinearLayout>